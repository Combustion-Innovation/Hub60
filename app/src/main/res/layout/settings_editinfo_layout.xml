<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3E3D"
    android:id="@+id/settings_editinfo_mainlayout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#3F4946"
        android:id="@+id/settings_editinfo_toplayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Info"
            android:id="@+id/settings_editinfo_title_textview"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/settings_editinfo_backbutton_holder"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_editinfo_backarrow"
                android:src="@drawable/backarrow"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/settings_editinfo_backtext"
                android:gravity="center_vertical"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/settings_editinfo_savebutton"
            android:background="#00000000"
            android:layout_alignBottom="@+id/settings_editinfo_title_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_editinfo_name_holder"
        android:background="#222726"
        android:divider="#ffffff"
        android:weightSum="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:id="@+id/settings_editinfo_name_text"
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/settings_editinfo_name_edittext"
            android:gravity="center_vertical|right"
            android:background="#00000000"
            android:textColor="#717A46"
            android:textSize="20sp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_editinfo_username_holder"
        android:background="#222726"
        android:divider="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="User Name"
            android:id="@+id/settings_editinfo_username_text"
            android:textSize="20sp"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_editinfo_username_edittext"
            android:gravity="center_vertical|right"
            android:text="Username"
            android:textSize="20sp"
            android:background="#00000000"
            android:textColor="#717A46"
            android:paddingRight="10dp"
            android:layout_weight="0.08" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_editinfo_gender_holder"
        android:background="#222726">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gender"
            android:id="@+id/settings_editinfo_gender_text"
            android:textSize="20sp"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_editinfo_gender_edittext"
            android:gravity="center_vertical|right"
            android:text="Male"
            android:textSize="20sp"
            android:background="#00000000"
            android:textColor="#717A46"
            android:paddingRight="10dp"
            android:layout_weight="0.08" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_editinfo_age_holder"
        android:background="#222726">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Age"
            android:id="@+id/settings_editinfo_age_text"
            android:textSize="20sp"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_editinfo_age_edittext"
            android:gravity="center_vertical|right"
            android:text="22"
            android:textSize="20sp"
            android:background="#00000000"
            android:textColor="#717A46"
            android:paddingRight="10dp"
            android:layout_weight="0.08" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_editinfo_location_holder"
        android:background="#222726">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Location"
            android:id="@+id/settings_editinfo_location_text"
            android:textSize="20sp"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_editinfo_location_edittext"
            android:gravity="center_vertical|right"
            android:text="Chicago"
            android:textSize="20sp"
            android:background="#00000000"
            android:textColor="#717A46"
            android:paddingRight="10dp"
            android:layout_weight="0.08" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_editinfo_email_holder"
        android:background="#222726">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email Address"
            android:id="@+id/settings_editinfo_email_text"
            android:textSize="20sp"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_editinfo_email_edittext"
            android:gravity="center_vertical|right"
            android:text="Chicago@aol.com"
            android:textSize="20sp"
            android:background="#00000000"
            android:textColor="#717A46"
            android:paddingRight="10dp"
            android:layout_weight="0.08" />
    </LinearLayout>
</LinearLayout>