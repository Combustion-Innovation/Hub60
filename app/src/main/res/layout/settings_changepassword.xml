<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3E3D"
    android:id="@+id/settings_changepassword_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#3F4946"
        android:id="@+id/settings_changepassword_spacer">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/settings_changepassword_button_holder">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_changepassword_back_button"
                android:src="@drawable/backarrow"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Settings"
                android:id="@+id/settings_changepassword_back_text"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/settings_changepassword_title_text"
                android:layout_toRightOf="@+id/settings_changepassword_back_button"
                android:layout_toEndOf="@+id/settings_changepassword_back_button"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Info"
            android:id="@+id/settings_changepassword_title_text"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:id="@+id/settings_changepassword_save_button"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#222726"
        android:gravity="center"
        android:id="@+id/settings_changepassword_newpass_holder">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/settings_changepassword_newpass_edittext"
            android:background="#00000000"
            android:hint="New Password"
            android:gravity="center"
            android:textColorHint="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#222726"
        android:gravity="center"
        android:id="@+id/settings_changepassword_confirmpass_holder">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/settings_changepassword_confirmpass_edittext"
            android:gravity="center"
            android:background="#00000000"
            android:hint="Confirm Password"
            android:textColorHint="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="#467B5E"
        android:id="@+id/settings_changepassword_submitbtn_holder">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Change Password"
            android:id="@+id/settings_changepassword_submit_button"
            android:background="#00000000"
            android:textSize="20sp"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>