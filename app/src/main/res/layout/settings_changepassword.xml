<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3E3D"
    android:id="@+id/settings_changepassword_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#3F4946"></RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#222726"
        android:gravity="center"
        android:id="@+id/settings_changepassword_newpass_holder">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/settings_changepassword_newpass_edittext"
            android:background="#00000000"
            android:hint="New Password"
            android:gravity="center"
            android:textColorHint="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#222726"
        android:gravity="center"
        android:id="@+id/settings_changepassword_confirmpass_holder">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/settings_changepassword_confirmpass_edittext"
            android:gravity="center"
            android:background="#00000000"
            android:hint="Confirm Password"
            android:textColorHint="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="#467B5E"
        android:id="@+id/settings_changepassword_submitbtn_holder">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Change Password"
            android:id="@+id/button"
            android:background="#00000000"
            android:textSize="20sp"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>